<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <servlet>
    <servlet-name>DbServlet</servlet-name>
    <servlet-class>de.jalin.freibier.webgui.DatabaseServlet</servlet-class>
    <init-param>
      <param-name>properties</param-name>
      <param-value>/WEB-INF/velocity.properties</param-value>
    </init-param>
	<init-param>   
    	<param-name>sqlFactoryClass</param-name>                               
	    <param-value>com.spaceprogram.sql.mysql.MySQLFactory</param-value>                              
	</init-param>
	<init-param>   
    	<param-name>jdbcDriverClass</param-name>                               
	    <param-value>com.mysql.jdbc.Driver</param-value>                              
	</init-param>
	<init-param>                                   
    	<param-name>jdbcConnectUrl</param-name>                               
	    <param-value>jdbc:mysql://localhost/demo?autoReconnect=true</param-value>                              
	</init-param>
	<init-param>                                   
    	<param-name>dbUser</param-name>                               
	    <param-value>demo</param-value>                              
	</init-param>
	<init-param>                                   
    	<param-name>dbPassword</param-name>                               
	    <param-value>demo</param-value>                              
	</init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>DbServlet</servlet-name>
	<url-pattern>/*</url-pattern>  
  </servlet-mapping>
  
</web-app>
